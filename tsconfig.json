{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",
    
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    
    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*"]
}